@model IEnumerable<Sistema.Models.Unidades>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p style="text-align: right">
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dsUnidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sigla)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dsUnidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sigla)
                </td>
                <td style="text-align: right; width: 200px">
                    <a asp-action="Edit" asp-route-id="@item.idUnidade">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.idUnidade">Visualizar</a> |
                    <a asp-action="Delete" asp-route-id="@item.idUnidade">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
