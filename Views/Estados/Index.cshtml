@model IEnumerable<Sistema.Models.Estados>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p style="text-align: right">
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nmEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idPais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.flUF)
            </th>           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nmEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nmPais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.flUF)
            </td>
                <td style="text-align: right; width: 200px">
                <a asp-action="Edit" asp-route-id="@item.idEstado">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idEstado">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.idEstado">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
