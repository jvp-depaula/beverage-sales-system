@model Sistema.Models.Estados

@{
    ViewData["Title"] = "Estados";
}

<section>
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Estados <small>Inserir</small></h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-white">
                <div class="panel-body">

                    @{
                        ViewBag.pageType = "Create";
                    }

                    @using (Html.BeginForm("Create", "Estados", FormMethod.Post, new { @class = "row g-3" }))
                    {
                        @Html.Partial("Estados/Form", Model)

                        <div class="col-12 mt-10">
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <a href="@Url.Action("Index", "Estados")" class="btn btn-primary">
                                Cancelar
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript" src="@Url.Content("~/js/Scripts/Estados/Form.js")"></script>
}