@model Sistema.Models.Categorias

@{
    var disabled = Convert.ToBoolean(ViewBag.disabledForm);
    var pageType = Convert.ToString(ViewBag.pageType);
}

@Html.HiddenFor(e => e.idCategoria)

<div class="col-md-6">
    @Html.LabelFor(e => e.nmCategoria, new { @class = "form-label" })
    @(disabled ?
        @Html.TextBoxFor(model => model.nmCategoria, new { @class = "form-control", autofocus = "autofocus", @disabled = "disabled" }) :
        @Html.TextBoxFor(model => model.nmCategoria, new { @class = "form-control", maxlength = "150", @placeholder = "" })
        )
    @Html.ValidationMessageFor(model => model.nmCategoria, null, new { @class = "help-block" })
</div>
<br />