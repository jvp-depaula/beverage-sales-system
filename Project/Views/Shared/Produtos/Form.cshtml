@model Sistema.Models.Produtos

@{
    var disabled = Convert.ToBoolean(ViewBag.disabledForm);
    var pageType = Convert.ToString(ViewBag.pageType);
}

@Html.HiddenFor(e => e.idProduto)
<div class="col-md-6">
    @Html.LabelFor(e => e.dsProduto, new { @class = "form-label" })
    @(disabled ?
        @Html.TextBoxFor(model => model.dsProduto, new { @class = "form-control", autofocus = "autofocus", @disabled = "disabled" }) :
        @Html.TextBoxFor(model => model.dsProduto, new { @class = "form-control", maxlength = "150", @placeholder = "" })
        )
    @Html.ValidationMessageFor(model => model.dsProduto, null, new { @class = "help-block" })
</div>

<div class="col-md-3">
    @Html.LabelFor(e => e.idMarca, new { @class = "form-label" })
    <div class="input-group mb-3">
        @(disabled ?
            @Html.DropDownListFor(model => model.idMarca, Model.ListaMarcas, new { @class = "form-control", autofocus = "autofocus", @disabled = "disabled" }) :
            @Html.DropDownListFor(model => model.idMarca, Model.ListaMarcas, new { @class = "form-control" })
            )
        @if (pageType == "Create" || pageType == "Edit")
        {
            <button class="btn btn-outline-secondary" type="button" id="btnAbreModalMarca" data-bs-toggle="modal" data-bs-target="#modalMarca"><i class="fas fa-search"></i></button>
        }
    </div>
    @Html.ValidationMessageFor(model => model.idMarca, null, new { @class = "help-block" })   
</div>

