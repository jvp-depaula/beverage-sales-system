@model Sistema.Models.Categorias

@{
    ViewData["Title"] = "Visualizar";
    ViewBag.pageType = "Details";
    ViewBag.disabledForm = true;
}

<section>
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Categorias <small>Visualizar</small></h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-white">
                <div class="panel-body">

                    @{
                        ViewBag.pageType = "Details";
                        ViewBag.disabledForm = true;
                    }

                    @using (Html.BeginForm("Details", "Categorias", FormMethod.Post, new { @class = "row g-3" }))
                    {
                        <partial name="~/Views/Shared/Categorias/Form.cshtml" model="Model"></partial>

                        <div class="col-12 mt-10">
                            <a href="@Url.Action("Delete", "Categorias", new { id = Model.idCategoria })" class="btn btn-danger">
                                Excluir
                            </a>
                            <a href="@Url.Action("Index", "Categorias")" class="btn btn-primary">
                                Cancelar
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
