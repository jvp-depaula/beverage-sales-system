@model Sistema.Models.Produtos

@{
    ViewData["Title"] = "Visualizar";
}

<section>
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Produtos <small>Visualizar</small></h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-white">
                <div class="panel-body">

                    @{
                        ViewBag.pageType = "Details";
                        ViewBag.disabledForm = true;
                    }

                    @using (Html.BeginForm("Details", "Produtos", FormMethod.Post, new { @class = "row g-3" }))
                    {
                        <partial name="~/Views/Shared/Produtos/Form.cshtml" model="Model"></partial>

                        <div class="col-12 mt-10">
                            <a href="@Url.Action("Delete", "Produtos", new { id = Model.idProduto })" class="btn btn-danger">
                                Excluir
                            </a>
                            <a href="@Url.Action("Index", "Produtos")" class="btn btn-primary">
                                Cancelar
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
